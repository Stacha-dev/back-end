{
	"name": "stacha/back-end",
	"type": "project",
	"description": "Back-end for our applications.",
	"authors": [
		{
			"name": "Stacha.dev",
			"email": "chalupa.petr93@gmail.com"
		}
	],
	"require": {
		"doctrine/orm": "^2.7.3"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.16",
		"phpstan/phpstan": "^0.12.25",
		"phpunit/phpunit": "^8.5"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"minimum-stability": "stable",
	"config": {
		"platform": {
			"php": "7.2.24"
		},
		"sort-packages": true
	},
	"scripts": {
		"test": "vendor/bin/phpunit tests",
		"test:codecov": "vendor/bin/phpunit --coverage-html public/reports/codecov/",
		"orm:create": "doctrine orm:schema-tool:create",
		"orm:update": "doctrine orm:schema-tool:update --force",
		"orm:drop": "doctrine orm:schema-tool:drop --force",
		"phpstan": "phpstan analyse src -l max",
		"doc": "phpdoc run -t docs",
		"cs": "php vendor/bin/php-cs-fixer fix ."
	}
}