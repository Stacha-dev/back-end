{
	"name": "stacha/back-end",
	"type": "project",
	"description": "Back-end for our applications.",
	"authors": [
		{
			"name": "Stacha.dev",
			"email": "chalupa.petr93@gmail.com"
		}
	],
	"require": {
		"doctrine/orm": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.12.25"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"minimum-stability": "stable",
	"config": {
		"platform": {
			"php": "7.2.24"
		},
		"sort-packages": true
	},
	"scripts": {
		"orm:create": "doctrine orm:schema-tool:create",
		"orm:update": "doctrine orm:schema-tool:update",
		"orm:drop": "doctrine orm:schema-tool:drop",
		"phpstan": "phpstan analyse src -l max",
		"doc": "phpdoc run -t docs"
	}
}
